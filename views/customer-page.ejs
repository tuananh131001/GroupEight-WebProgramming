<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Customer page</title>
</head>
<body>
    <form action="/customer-page" method="POST">
        <%- include('./partials/headerForcustomer.ejs') %>
        <h1>Product List</h1>
        
        <!-- Search Form -->
        <%- include('search.ejs') %>
        <!-- Filter Form -->
        <%- include('filterProducts.ejs') %>

        <div class="container text-center">
                <div class="row"> 
                    <% products.forEach(function(product){ %>
                    <div class="col-lg-4 col-md-6 col-sm-12 p-2">
                        <div class="card w-auto">
                        <a href="#"><img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.image %>"></a>
                        <div class="card-body text-center">
                            <h3 class="card-title fs-auto fw-bold">
                            <%= product.name %>
                            </h3>
                            <p class="card-text fs-auto">
                            <strong>$<%= product.price %></strong>
                            </p>
                            <p>Description</p>
                        </div>
                        <div class="card-footer text-center">
                            <div class="animation-btn">
                                <a href="products/<%= product.id %>">
                                    <button class="btn btn-outline-dark me-auto">View</button>
                                </a>
                                <a href="/order">
                                    <button class="btn btn-outline-dark me-auto">Order!</button>
                                </a>
                            </div>
                        </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                </div>
        </div>
        <%- include('./partials/footer.ejs')  %>
    </form>
</body>
</html>