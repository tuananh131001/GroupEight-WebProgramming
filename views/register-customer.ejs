<%- include('partials/messages') %>
<form action="/register/customer" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input
      type="name"
      id="name"
      name="name"
      class="form-control"
      placeholder="Enter Name"
      value="<%= typeof name != 'undefined' ? name : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input
      type="text"
      name="address"
      class="form-control"
      placeholder="Address"
    />
  </div>
  <div class="form-group">
    <label for="username">Username</label>
    <input
      type="username"
      id="username"
      name="username"
      class="form-control"
      placeholder="Enter Username"
      value="<%= typeof username != 'undefined' ? username : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      class="form-control"
      placeholder="Create Password"
      value="<%= typeof password != 'undefined' ? password : '' %>"
    />
  </div>


  <input
    value="customer"
    type="hidden"
    id="role"
    name="role"
    class="form-control"
  />
  <button type="submit" class="btn btn-primary btn-block">Register</button>
</form>

<p class="lead mt-4">Are you a shipper? <a href="/register-shipper">Register as a shipper</a></p>
<p class="lead mt-4">Are you a Vendor? <a href="/register-vendor">Register as a vendor</a></p>

<p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
