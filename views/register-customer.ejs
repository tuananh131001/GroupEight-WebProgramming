<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <div class="container">
      <form action="/register/customer" method="POST">
        <div class="form-group py-1">
          <label class="py-1" for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group py-1">
          <label class="pb-1" for="address">Address</label>
          <input
            type="text"
            name="address"
            class="form-control"
            placeholder="Address"
          />
        </div>
        <div class="form-group py-1">
          <label class="pb-1" for="username">Username</label>
          <input
            type="username"
            id="username"
            name="username"
            class="form-control"
            placeholder="Enter Username"
            value="<%= typeof username != 'undefined' ? username : '' %>"
          />
        </div>
        <div class="form-group py-1">
          <label class="pb-1" for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>

        <input
          value="customer"
          type="hidden"
          id="role"
          name="role"
          class="form-control"
        />
        <button type="submit" class="btn btn-primary btn-block pt-1">
          Register
        </button>
      </form>

      <p class="lead mt-4">
        Are you a shipper? <a href="/register-shipper">Register as a shipper</a>
      </p>
      <p class="lead mt-4">
        Are you a Vendor? <a href="/register-vendor">Register as a vendor</a>
      </p>

      <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
    </div>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
