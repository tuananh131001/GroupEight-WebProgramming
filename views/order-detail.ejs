
<body class="bg-light">
  <%- include('./partials/header.ejs') %>

  <section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <% order.product_detail.forEach(product => { %>
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-xs-12 mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="/image/<%= product.image %>" alt="<%= product.image %>" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder"><%= product.name %></h5>
                                <!-- Product price-->
                                Price: $<%= product.price.toFixed(2) %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
  </section>

  <section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-8 col-xl-6">
          <div class="card border-top border-bottom border-3" style="border-color: #0d6efd !important;">
            <div class="card-body p-5">
  
              <p class="lead fw-bold mb-5" style="color: #0d6efd;">Order Details</p>
  
              <div class="row">
                <div class="col mb-3">
                  <p class="small text-muted mb-1">Shipping Address</p>
                  <p><%= order.address %></p>
                </div>
                <div class="col mb-3">
                  <p class="small text-muted mb-1">Distribution Hub</p>
                  <p><%= order.distributionHub %></p>
                </div>
              </div>

              <div class="row my-4">
                <div class="col-md-8 col-lg-9">
                  <p class="lead fw-bold mb-0" style="color: #0d6efd;">Order Total</p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p class="lead fw-bold mb-0" style="color: #0d6efd;">$<%= order.total.toFixed(2) %></p>
                </div>
              </div>
  
              <p class="lead fw-bold mb-4 pb-2" style="color: #0d6efd;">Tracking Order</p>
  
              <div class="row">
                <div class="col-lg-12">
  
                  <div class="horizontal-timeline">
  
                    <ul class="list-inline items d-flex justify-content-between">
                      <li class="list-inline-item items-list">
                        <p class="py-1 px-2 rounded text-white" style="background-color: #0d6efd;">Ordered</p
                          class="py-1 px-2 rounded text-white" style="background-color: #0d6efd;">
                      </li>
                      <li class="list-inline-item items-list">
                        <p class="py-1 px-2 rounded text-white" style="background-color: #0d6efd;"><%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %></p
                          class="py-1 px-2 rounded text-white" style="background-color: #0d6efd;">
                      </li>
                      <li class="list-inline-item items-list" style="margin-right: 8px;">
                        <p style="margin-right: -8px;">On the way
                        </p>
                      </li>
                      <li class="list-inline-item items-list text-end" style="margin-right: 8px;">
                        <p style="margin-right: -8px;">Delivered</p>
                      </li>
                    </ul>
  
                  </div>
  
                </div>
              </div>
  
              <p class="mt-4 pt-2 mb-0">Want any help? <a href="/support" style="color: #0d6efd;">Please contact
                  us</a></p>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('./partials/footer.ejs') %>

</body>