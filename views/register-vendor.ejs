<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <title>Homepage</title>
</head>
<body>
  <%- include('./partials/header.ejs') %>

  <div class="container">
    <form action="/register/vendor" method="POST">
      <div class="form-group pb-1">
        <label class="pb-1" for="name">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          placeholder="Enter Username"
          value="<%= typeof name != 'undefined' ? name : '' %>"
        />
      </div>
    
      <div class="form-group pb-1">
        <label class="pb-1" for="businessName">Business name</label>
        <input
          type="text"
          id="businessName"
          name="businessName"
          class="form-control"
          placeholder="Enter businessName"
        />
      </div>
      <div class="form-group py-1">
        <label class="pb-1" for="businessName">Business Address</label>
        <input
          type="text"
          id="businessAddress"
          name="businessAddress"
          class="form-control"
          placeholder="Enter businessAddress"
        />
      </div>
      <div class="form-group py-1">
        <label class="pb-1" for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Create Password"
          value="<%= typeof password != 'undefined' ? password : '' %>"
        />
      </div>
      <button type="submit" class="btn btn-primary btn-block pt-1">Register</button>
    </form>
    <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
    
    <p class="lead mt-4">Are you a customer? <a href="/register-customer">Register as a customer</a></p>
    <p class="lead mt-4">Are you a shipper? <a href="/register-shipper">Register as a shipper</a></p>
  </div>
  
  <%- include('./partials/footer.ejs') %>
</body>