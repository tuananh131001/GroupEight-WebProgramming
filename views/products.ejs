<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group 8</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <a href=""><h2>view products</h2></a>
  <a href=""><h2>Add</h2></a>
  <div class="container text-center" id="products">
    <h3>Product 1</h3>
    <div class="row"> 
          <% products.forEach(function(product){ %>
            <div class="col-sm-4">
              <div class="card w-auto>
                <a href="#"><img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.image %>"></a>
                <a href="productDetails/<%= product.id %>"><button class="purchase2"><span>Details</span></button></a>
                <div class="card-body">
                  <p class="card-title fs-auto fw-bold">
                    <%= product.name %>
                  </p>
                  <h4 class="card-text text-danger">
                    <strong><%= product.price %></strong>
                  </h4>
                  <p>Description</p>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
        <h3>Product 2</h3>
        <div class="row"> 
              <% products.forEach(function(product){ %>
                <div class="col-sm-4">
                  <div class="card w-auto>
                    <a href="#"><img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.image %>"></a>
                    <a href="productDetails/<%= product.id %>"><button class="purchase2"><span>Details</span></button></a>
                    <div class="card-body">
                      <p class="card-title fs-auto fw-bold">
                        <%= product.name %>
                      </p>
                      <h4 class="card-text text-danger">
                        <strong><%= product.price %></strong>
                      </h4>
                      <p>Description</p>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
        </div>
    </div>
  </div>
    

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>